@model IEnumerable<Application.Models.Make>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Add Make", "AddMake")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(make => make.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(make => make.OriginCountry)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(makeItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCountry)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMake", new { MakeId = item.MakeId }) |
                @Html.ActionLink("Delete", "DeleteMake", new { MakeId = item.MakeId })
            </td>
        </tr>
    }
</table>