@model Application.Models.Model

@{
    ViewBag.Title = "AddModel";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Add Model</h4>
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">

        @Html.LabelFor(model => model, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Name:
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Brand:
            @Html.EditorFor(model => model.Make.BrandName)
            @Html.ValidationMessageFor(model => model.Make.BrandName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cars)
            @Html.ValidationMessageFor(model => model.Cars)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to Model List", "Index")
</div>