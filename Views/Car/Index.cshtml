@model IEnumerable<Application.Models.Car>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Add Car", "AddCar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(car => car.Model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(car => car.Year)
        </th>
        <th>
            @Html.DisplayNameFor(car => car.Power)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(car => item.Model.Name)
            </td>
            <td>
                @Html.DisplayFor(car => item.Year)
            </td>
            <td>
                @Html.DisplayFor(car => item.Power)
            </td>

            <td>
                @*@Html.ActionLink("Edit", "EditCar", new { CarId = item.CarId })
                    @Html.ActionLink("Delete", "DeleteCar", new { CarId = item.CarId })
                *@

                 <input type="EDIT" value="Edit" class="btn btn-default" /> |
            @Html.ActionLink("Edit Car", "EditCar")
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>